    echo " 转拽 转转..."
    npm install
fi

echo " 专抓 转 驻专拽..."
echo ""
echo "  专转 转 驻拽爪 注 驻驻:"
echo "1. 驻转 转 驻拽爪转 Expo Go 注 驻驻"
echo "2. 住专拽 转 -QR code 砖驻注 "
echo "3.  拽 转 拽 砖驻注"
echo ""
echo "  转  转 专砖转 WiFi, 砖转砖 : npx expo start --tunnel"
echo ""

# 专爪转 驻专拽
npx expo start